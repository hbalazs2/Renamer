<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.renamer.HomeController">
    <padding>
        <Insets bottom="20.0" right="20.0" top="20.0"/>
    </padding>

    <ButtonBar VBox.vgrow="NEVER">
       <buttons>
            <Button fx:id="exitButton" cancelButton="true" onAction="#onExitButtonClick" text="Exit" textAlignment="CENTER" ButtonBar.buttonData="CANCEL_CLOSE" />
            <Button fx:id="renameButton" onAction="#onRenameButtonClick" text="Rename files" textAlignment="CENTER" ButtonBar.buttonData="SMALL_GAP" />
            <Button fx:id="printButton" onAction="#onPrintButtonClick" text="Print files" textAlignment="CENTER" ButtonBar.buttonData="SMALL_GAP" />
       </buttons>
    </ButtonBar>
</VBox>
